---
export interface Props {
  title: string;
  componentName: string;
  technology: string;
}

const { title, componentName, technology } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Component Showcase" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Space Grotesk', monospace;
        background: #000;
        color: #fff;
        min-height: 100vh;
        border: 4px solid #fff;
      }
      
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 2px solid #fff;
        background: #000;
      }
      
      .back-button {
        background: #fff;
        color: #000;
        border: none;
        padding: 0.5rem 1rem;
        font-family: inherit;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
      }
      
      .back-button:hover {
        background: #000;
        color: #fff;
        outline: 2px solid #fff;
      }
      
      .component-info {
        display: flex;
        gap: 1rem;
        align-items: center;
      }
      
      .component-name {
        font-size: 1.2rem;
        font-weight: bold;
      }
      
      .technology {
        background: #fff;
        color: #000;
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
        font-weight: bold;
        text-transform: uppercase;
      }
      
      .content {
        flex: 1;
        overflow: hidden;
      }
      
      .container {
        display: flex;
        flex-direction: column;
        height: 100vh;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <a href="/components" class="back-button">‚Üê Back</a>
        <div class="component-info">
          <span class="component-name">{componentName}</span>
          <span class="technology">{technology}</span>
        </div>
      </header>
      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>