<div class="overflow-hidden relative w-full pb-4 pt-1">
  <div class="flex w-max marquee-scroll hover:animate-none">
    <ul class="flex items-center flex-shrink-0 space-x-4 pr-4">
      {links.map(link => (
        <li>
          <Tag text={link.text} />
        </li>
      ))}
    </ul>
    <ul class="flex items-center flex-shrink-0 space-x-4 pr-4" aria-hidden="true">
      {links.map(link => (
        <li>
          <Tag text={link.text} />
        </li>
      ))}
    </ul>
    <ul class="flex items-center flex-shrink-0 space-x-4 pr-4" aria-hidden="true">
      {links.map(link => (
        <li>
          <Tag text={link.text} />
        </li>
      ))}
    </ul>
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }
  
  .marquee-scroll {
    animation: marquee 30s linear infinite;
  }
</style>
