---
import TableOfContents from '@/components/TableOfContents.astro';
import { defaultLang, type Language } from '@/i18n/ui';

interface Props {
    contentId?: string;
    className?: string;
    lang?: Language;
}

const {
    contentId = 'main-content',
    className = '',
    lang = defaultLang
} = Astro.props;
---

<aside class={`sticky top-20 w-[250px] min-w-[250px] max-h-[60dvh] flex-shrink-0 hidden lg:block overflow-y-auto py-8 px-4 ${className}`} id="content-sidebar">
    <!-- Table of Contents -->
    <TableOfContents contentId={contentId} lang={lang} />
</aside>


