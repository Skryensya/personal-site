---
import TocClerkAuto from '@/components/TocClerkAuto.tsx';
import { defaultLang, type Language } from '@/i18n/ui';

interface Props {
    contentId?: string;
    className?: string;
    lang?: Language;
    useClerkTOC?: boolean; // deprecated
}

const {
    contentId = 'main-content',
    className = '',
    lang = defaultLang,
    useClerkTOC = false,
} = Astro.props;
---

<aside class={`sticky top-20 w-[250px] min-w-[250px] max-h-[90dvh] flex-shrink-0 hidden lg:block overflow-y-auto py-8 px-4 ${className}`} id="content-sidebar">
    <TocClerkAuto client:idle contentId={contentId} />
</aside>
