---
import IsometricTextCard from './IsometricTextCard.astro';

interface Service {
    id: string;
    title?: string;
}

interface Props {
    title?: string;
    services?: Service[];
}

const defaultServices: Service[] = [
    { id: "01", title: "Desarrollo Web" },
    { id: "02", title: "Consultor√≠a" },
    { id: "03", title: "Mentoring" }
];

const { 
    title = "Nuestros servicios",
    services = defaultServices 
} = Astro.props;
---

<section class="py-20 border-main/20">
    <h2 class="text-2xl font-semibold text-main mb-12">{title}</h2>
    <div class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-12">
        {services.map((service) => (
            <IsometricTextCard text={service.id} size="lg" />
        ))}
    </div>
</section>