---
import BigSectionContainer from './BigSectionContainer.astro';
import TLDRSection from './TLDRSection.astro';
import { useTranslations } from '@/i18n/utils';
import { defaultLang, type Language } from '@/i18n/ui';

interface Props {
    lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
---

<BigSectionContainer title={t('about.tldr.title')} id="about" style="view-transition-name: about-section;">
    <TLDRSection lang={lang} />
</BigSectionContainer>