---
interface Job {
    title: string;
    company?: string;
    period: string;
    description: string;
}

interface Props {
    jobs?: Job[];
}

const defaultJobs: Job[] = [
    {
        title: "Desarrollador Senior",
        company: "Asimov Consultores",
        period: "2022 - ahora",
        description: "Hago aplicaciones web con React y Node.js. También ayudo al equipo con código y a veces explico cosas a los developers nuevos."
    },
    {
        title: "Freelancer",
        period: "2020 - 2022",
        description: "Hacía sitios web para empresas pequeñas. Me gustaba mucho que fueran rápidos y que todos los pudieran usar."
    }
];

const { jobs = defaultJobs } = Astro.props;
---

<section class="py-20 border-main/20">
    <h2 class="text-2xl font-semibold text-main mb-6">Dónde he trabajado</h2>
    <div class="space-y-6">
        {jobs.map((job) => (
            <div>
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-1">
                    <h3 class="text-lg font-medium text-main">{job.title}</h3>
                    <span class="text-sm text-main/60">{job.period}</span>
                </div>
                {job.company && (
                    <p class="text-main/60 mb-2">{job.company}</p>
                )}
                <p class="text-main/70">{job.description}</p>
            </div>
        ))}
    </div>
</section>