                <!-- Skills Column -->
                <div>
                    <h2 class="text-xl font-bold uppercase border-b-2 border-main pb-1 mb-4">
                        TECNOLOGÍAS
                    </h2>
                    <div class="space-y-4">
                        <div class="bg-secondary/50 border-l-4 border-main p-3">
