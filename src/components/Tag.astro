---
interface Props {
  text: string;
}

const { text } = Astro.props;
const slug = text.toLowerCase().replace(/\s+/g, '-');
---

<a href={`/tags/${slug}`} class="relative inline-block bg-secondary text-main px-4 py-2 text-sm font-mono font-medium border-2 border-main transition-all duration-200 hover:bg-main hover:text-secondary overflow-hidden group">
  #{text}
  <div class="absolute bottom-0 right-0 w-0 h-0 border-l-[12px] border-l-transparent border-b-[12px] border-b-black group-hover:border-b-white transition-colors duration-200"></div>
</a>
