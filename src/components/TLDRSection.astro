---
import { useTranslations } from '@/i18n/utils';
import { defaultLang, type Language } from '@/i18n/ui';
import Button from './Button.astro';

interface Props {
    className?: string;
    lang?: Language;
}

const { className = '', lang = defaultLang } = Astro.props;
const t = useTranslations(lang);
---

<div class={className} style="view-transition-name: tldr-content;">
    
    <!-- Professional summary -->
    <div style="view-transition-name: tldr-description;">
        <p class="text-base text-main mb-6" style="max-width: var(--paragraph-max-width);">
            {t('about.tldr.description')}
        </p>
        
        <!-- Interactive CTA button -->
        <div class="mt-8">
            <Button 
                variant="outline"
                elevated
                onClick="document.getElementById('projects')?.scrollIntoView({ behavior: 'smooth' })"
            >
                {t('about.collaboration.title')}
            </Button>
        </div>
    </div>

</div>