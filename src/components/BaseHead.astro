---
import siteConfig from '../data/site-config';
import '../styles/global.css';
import type { Language } from '../i18n/ui';

export type Props = {
    title?: string;
    description?: string;
    image?: { src: string; alt?: string };
    pageType?: 'website' | 'article';
    lang?: Language;
};

const { description = '', image = siteConfig.image, pageType = 'website', lang = 'es' } = Astro.props;
const title = [Astro.props.title, siteConfig.title].filter(Boolean).join(' | ');
const resolvedImage = image?.src
    ? {
          src: new URL(image.src, Astro.site).toString(),
          alt: image.alt
      }
    : undefined;

// Pre-generate meta tags to avoid template issues
const ogImageMeta = resolvedImage?.src ? `<meta property="og:image" content="${resolvedImage.src}" />` : '';
const ogImageAltMeta = resolvedImage?.alt ? `<meta property="og:image:alt" content="${resolvedImage.alt}" />` : '';
const twitterImageMeta = resolvedImage?.src ? `<meta property="twitter:image" content="${resolvedImage.src}" />` : '';
const twitterImageAltMeta = resolvedImage?.alt ? `<meta name="twitter:image:alt" content="${resolvedImage.alt}" />` : '';
const canonicalURL = new URL(Astro.request.url, Astro.site);

// Hreflang URLs for multilingual SEO
const currentPath = Astro.url.pathname;
const basePath = currentPath.replace(/^\/(en|no)/, '') || '/';

const alternateURLs = {
    es: new URL(basePath === '/' ? '/' : basePath, Astro.site).toString(),
    en: new URL('/en' + basePath, Astro.site).toString(),
    no: new URL('/no' + basePath, Astro.site).toString()
};

/**
 * Enforce some standard canonical URL formatting across the site.
 */
function formatCanonicalURL(url: string | URL) {
    const path = url.toString();
    const hasQueryParams = path.includes('?');
    // If there are query params, make sure the URL has no trailing slash
    if (hasQueryParams) {
        path.replace(/\/?$/, '');
    }
    // otherwise, canonical URL always has a trailing slash
    return path.replace(/\/?$/, hasQueryParams ? '' : '/');
}
---

<!-- High Priority Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>{title}</title>
<meta name="generator" content={Astro.generator} />

<!-- Preconnect to external domains for faster loading -->
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
<link rel="dns-prefetch" href="https://cdnjs.cloudflare.com" />

<!-- Tech Fonts - async load for performance -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
    href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Space+Grotesk:wght@300;400;500;600;700&display=swap"
    rel="stylesheet"
    media="print"
    onload="this.media='all'"
/>
<noscript>
    <link
        href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Space+Grotesk:wght@300;400;500;600;700&display=swap"
        rel="stylesheet"
    />
</noscript>

<!-- Low Priority Global Metadata -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/x-icon" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" href="/rss.xml" title="RSS" />

<!-- Page Metadata -->
<link rel="canonical" href={formatCanonicalURL(canonicalURL)} />
<meta name="description" content={description} />

<!-- Language and Localization -->
<html lang={lang} />
<meta name="language" content={lang} />

<!-- Hreflang tags for multilingual SEO -->
<link rel="alternate" hreflang="es" href={alternateURLs.es} />
<link rel="alternate" hreflang="en" href={alternateURLs.en} />
<link rel="alternate" hreflang="no" href={alternateURLs.no} />
<link rel="alternate" hreflang="x-default" href={alternateURLs.es} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={pageType} />
<meta property="og:url" content={formatCanonicalURL(canonicalURL)} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<Fragment set:html={ogImageMeta} />
<Fragment set:html={ogImageAltMeta} />

<!-- X/Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={formatCanonicalURL(canonicalURL)} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<Fragment set:html={twitterImageMeta} />
<Fragment set:html={twitterImageAltMeta} />

<!-- Structured Data (JSON-LD) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": siteConfig.title,
  "description": description || siteConfig.description,
  "url": formatCanonicalURL(canonicalURL),
  "inLanguage": [
    {
      "@type": "Language",
      "name": "Spanish",
      "alternateName": "es"
    },
    {
      "@type": "Language", 
      "name": "English",
      "alternateName": "en"
    },
    {
      "@type": "Language",
      "name": "Norwegian",
      "alternateName": "no"
    }
  ],
  "author": {
    "@type": "Person",
    "name": "Allison Pe√±a",
    "jobTitle": "Software Developer",
    "url": "https://skryensya.dev",
    "sameAs": [
      "https://github.com/skryensya",
      "https://linkedin.com/in/allisonpenaloza"
    ]
  },
  "publisher": {
    "@type": "Organization",
    "name": siteConfig.title,
    "url": formatCanonicalURL(canonicalURL)
  }
}
</script>