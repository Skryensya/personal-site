---
import Layout from '@/layouts/Layout.astro';
import Button from '@/components/Button.astro';
import ProjectCard from '@/components/ProjectCard.astro';
import ContentPage from '@/components/ContentPage.astro';
import { getTranslations } from '@/i18n/utils';
import { defaultLang, type Language } from '@/i18n/ui';

interface Props {
    lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = getTranslations(lang);

// Get language-specific meta
const titles = {
    es: 'Sistema de Diseño - Showcase',
    en: 'Design System - Showcase',
    no: 'Designsystem - Showcase'
};

const descriptions = {
    es: 'Documentación completa del sistema de diseño minimalista brutalist: componentes, tipografía, colores y principios.',
    en: 'Complete documentation of the brutalist minimalist design system: components, typography, colors and principles.',
    no: 'Komplett dokumentasjon av det brutalistiske minimalistiske designsystemet: komponenter, typografi, farger og prinsipper.'
};
---

<Layout
    title={titles[lang]}
    description={descriptions[lang]}
    lang={lang}
>
    <ContentPage
        contentId="main-content"
        lang={lang}
        contentClassName="py-8 md:py-16 space-y-12 md:space-y-20"
    >
        <!-- Hero Header -->
        <header id="introduccion" class="space-y-6 md:space-y-8">
            <h1 class="font-mono text-4xl md:text-6xl lg:text-7xl font-bold leading-tight">
                {lang === 'es' ? 'Sistema de Diseño' : lang === 'en' ? 'Design System' : 'Designsystem'}
            </h1>

            <div class="space-y-4 max-w-3xl">
                {lang === 'es' ? (
                    <>
                        <p class="text-lg md:text-xl leading-relaxed">
                            Un sistema de diseño minimalista brutalist construido sobre dos principios fundamentales: <strong>simplicidad radical</strong> y <strong>funcionalidad directa</strong>.
                        </p>
                        <p class="text-base md:text-lg leading-relaxed text-main/80">
                            Cada elemento está diseñado para comunicar sin decoración innecesaria. Sin gradientes, sin sombras suaves, sin animaciones superfluas. Solo dos colores que se invierten, bordes definidos y tipografía clara. El resultado: interfaces honestas que priorizan el contenido y la accesibilidad sobre el estilo visual.
                        </p>
                    </>
                ) : lang === 'en' ? (
                    <>
                        <p class="text-lg md:text-xl leading-relaxed">
                            A brutalist minimalist design system built on two fundamental principles: <strong>radical simplicity</strong> and <strong>direct functionality</strong>.
                        </p>
                        <p class="text-base md:text-lg leading-relaxed text-main/80">
                            Every element is designed to communicate without unnecessary decoration. No gradients, no soft shadows, no superfluous animations. Just two colors that invert, defined borders and clear typography. The result: honest interfaces that prioritize content and accessibility over visual style.
                        </p>
                    </>
                ) : (
                    <>
                        <p class="text-lg md:text-xl leading-relaxed">
                            Et brutalistisk minimalistisk designsystem bygget på to grunnleggende prinsipper: <strong>radikal enkelhet</strong> og <strong>direkte funksjonalitet</strong>.
                        </p>
                        <p class="text-base md:text-lg leading-relaxed text-main/80">
                            Hvert element er designet for å kommunisere uten unødvendig dekorasjon. Ingen gradienter, ingen myke skygger, ingen overflødige animasjoner. Bare to farger som inverterer, definerte kanter og tydelig typografi. Resultatet: ærlige grensesnitt som prioriterer innhold og tilgjengelighet over visuell stil.
                        </p>
                    </>
                )}
            </div>
        </header>

        <!-- Design Principles -->
        <section id="principios" class="space-y-6">
            <h2 class="font-mono text-2xl md:text-3xl font-bold">
                {lang === 'es' ? 'Principios de Diseño' : lang === 'en' ? 'Design Principles' : 'Designprinsipper'}
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="bg-main/10 p-6 space-y-3">
                    <h3 class="font-mono text-lg md:text-xl font-bold">
                        {lang === 'es' ? 'Sistema de Dos Colores' : lang === 'en' ? 'Two-Color System' : 'To-Fargesystem'}
                    </h3>
                    <p class="text-sm md:text-base">
                        {lang === 'es'
                            ? 'Limitación estricta a colores principales y secundarios que se intercambian en modo oscuro. Sin grises, acentos o colores adicionales.'
                            : lang === 'en'
                            ? 'Strict limitation to main and secondary colors that swap in dark mode. No grays, accents, or additional colors.'
                            : 'Streng begrensning til hoved- og sekundærfarger som bytter i mørk modus. Ingen grå, aksenter eller tilleggsfarger.'}
                    </p>
                </div>

                <div class="bg-main/10 p-6 space-y-3">
                    <h3 class="font-mono text-lg md:text-xl font-bold">
                        {lang === 'es' ? 'Bordes Definidos' : lang === 'en' ? 'Sharp Edges' : 'Skarpe Kanter'}
                    </h3>
                    <p class="text-sm md:text-base">
                        {lang === 'es'
                            ? 'Sin esquinas redondeadas excepto para elementos funcionales. Rectángulos limpios y formas geométricas en todo el sistema.'
                            : lang === 'en'
                            ? 'No rounded corners except for functional elements. Clean rectangles and geometric shapes throughout.'
                            : 'Ingen avrundede hjørner bortsett fra funksjonelle elementer. Rene rektangler og geometriske former gjennomgående.'}
                    </p>
                </div>

                <div class="bg-main/10 p-6 space-y-3">
                    <h3 class="font-mono text-lg md:text-xl font-bold">
                        {lang === 'es' ? 'Cambios Instantáneos' : lang === 'en' ? 'Instant Changes' : 'Øyeblikkelige Endringer'}
                    </h3>
                    <p class="text-sm md:text-base">
                        {lang === 'es'
                            ? 'Sin animaciones o transiciones para cambios de estado. Feedback visual instantáneo para todas las interacciones.'
                            : lang === 'en'
                            ? 'No animations or transitions for state changes. Instant visual feedback for all interactions.'
                            : 'Ingen animasjoner eller overganger for tilstandsendringer. Umiddelbar visuell tilbakemelding for alle interaksjoner.'}
                    </p>
                </div>

                <div class="bg-main/10 p-6 space-y-3">
                    <h3 class="font-mono text-lg md:text-xl font-bold">
                        {lang === 'es' ? 'Grid de 8px' : lang === 'en' ? '8px Grid' : '8px Rutenett'}
                    </h3>
                    <p class="text-sm md:text-base">
                        {lang === 'es'
                            ? 'Espaciado consistente usando incrementos de 8px (2, 4, 6, 8) para layouts predecibles.'
                            : lang === 'en'
                            ? 'Consistent spacing using 8px increments (2, 4, 6, 8) for predictable layouts.'
                            : 'Konsistent avstand med 8px-økninger (2, 4, 6, 8) for forutsigbare layouts.'}
                    </p>
                </div>
            </div>
        </section>

        <!-- Typography Section -->
        <section id="tipografia" class="space-y-6">
            <h2 class="font-mono text-2xl md:text-3xl font-bold">
                {lang === 'es' ? 'Tipografía' : lang === 'en' ? 'Typography' : 'Typografi'}
            </h2>

            <div class="space-y-6 bg-main/10 p-6">
                <div class="space-y-3">
                    <p class="text-sm text-main/60">{lang === 'es' ? 'Display - font-mono' : lang === 'en' ? 'Display - font-mono' : 'Display - font-mono'}</p>
                    <h1 class="font-mono text-4xl md:text-5xl font-bold">The quick brown fox</h1>
                </div>

                <div class="space-y-3">
                    <p class="text-sm text-main/60">{lang === 'es' ? 'Título - font-mono' : lang === 'en' ? 'Heading - font-mono' : 'Overskrift - font-mono'}</p>
                    <h2 class="font-mono text-2xl md:text-3xl font-bold">The quick brown fox</h2>
                </div>

                <div class="space-y-3">
                    <p class="text-sm text-main/60">{lang === 'es' ? 'Subtítulo - font-sans' : lang === 'en' ? 'Subtitle - font-sans' : 'Undertittel - font-sans'}</p>
                    <h3 class="font-sans text-lg md:text-xl font-bold">The quick brown fox jumps over the lazy dog</h3>
                </div>

                <div class="space-y-3">
                    <p class="text-sm text-main/60">{lang === 'es' ? 'Cuerpo - Regular' : lang === 'en' ? 'Body - Regular' : 'Brødtekst - Regular'}</p>
                    <p class="text-base">The quick brown fox jumps over the lazy dog. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>

                <div class="space-y-3">
                    <p class="text-sm text-main/60">{lang === 'es' ? 'Pequeño - font-mono' : lang === 'en' ? 'Small - font-mono' : 'Liten - font-mono'}</p>
                    <p class="text-sm font-mono">The quick brown fox jumps over the lazy dog</p>
                </div>
            </div>
        </section>

        <!-- Buttons Section -->
        <section id="botones" class="space-y-6">
            <h2 class="font-mono text-2xl md:text-3xl font-bold">
                {lang === 'es' ? 'Botones' : lang === 'en' ? 'Buttons' : 'Knapper'}
            </h2>

            <!-- Normal Buttons -->
            <div class="space-y-4">
                <h3 class="font-sans text-lg md:text-xl font-bold">
                    {lang === 'es' ? 'Botones Normales' : lang === 'en' ? 'Normal Buttons' : 'Normale Knapper'}
                </h3>
                <div class="bg-main/10 p-6 flex flex-wrap gap-4 items-center">
                    <Button variant="normal" size="normal">Default Button</Button>
                    <Button variant="normal" size="normal" filled>Filled Button</Button>
                    <Button variant="normal" size="sm">Small Button</Button>
                    <Button variant="normal" size="sm" filled>Small Filled</Button>
                </div>
            </div>

            <!-- Elevated Buttons -->
            <div class="space-y-4">
                <h3 class="font-sans text-lg md:text-xl font-bold">
                    {lang === 'es' ? 'Botones Elevados' : lang === 'en' ? 'Elevated Buttons' : 'Hevede Knapper'}
                </h3>
                <div class="bg-main/10 p-6 flex flex-wrap gap-8 items-center">
                    <Button variant="normal" size="normal" elevated>Elevated Default</Button>
                    <Button variant="normal" size="normal" filled elevated>Elevated Filled</Button>
                    <Button variant="normal" size="sm" elevated>Small Elevated</Button>
                </div>
            </div>

            <!-- Outline Buttons -->
            <div class="space-y-4">
                <h3 class="font-sans text-lg md:text-xl font-bold">
                    {lang === 'es' ? 'Botones Outline' : lang === 'en' ? 'Outline Buttons' : 'Kontur Knapper'}
                </h3>
                <div class="bg-main/10 p-6 flex flex-wrap gap-4 items-center">
                    <Button variant="outline" size="normal">Outline Normal</Button>
                    <Button variant="outline" size="sm">Outline Small</Button>
                </div>
            </div>

            <!-- Outline Elevated Buttons -->
            <div class="space-y-4">
                <h3 class="font-sans text-lg md:text-xl font-bold">
                    {lang === 'es' ? 'Botones Outline Elevados (Animados)' : lang === 'en' ? 'Outline Elevated Buttons (Animated)' : 'Kontur Hevede Knapper (Animert)'}
                </h3>
                <div class="bg-main/10 p-6 flex flex-wrap gap-8 items-center">
                    <Button variant="outline" size="normal" elevated>Outline Elevated</Button>
                    <Button variant="outline" size="sm" elevated>Small Outline</Button>
                </div>
            </div>
        </section>

        <!-- Cards Section -->
        <section id="tarjetas" class="space-y-6">
            <h2 class="font-mono text-2xl md:text-3xl font-bold">
                {lang === 'es' ? 'Tarjetas de Proyecto' : lang === 'en' ? 'Project Cards' : 'Prosjektkort'}
            </h2>

            <div class="bg-main/10 p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <ProjectCard
                        name={lang === 'es' ? 'Proyecto Ejemplo' : lang === 'en' ? 'Example Project' : 'Eksempelprosjekt'}
                        hook={lang === 'es'
                            ? 'Este es un ejemplo de tarjeta de proyecto con un hook descriptivo que muestra cómo se ve el contenido.'
                            : lang === 'en'
                            ? 'This is an example project card with a descriptive hook showing how the content looks.'
                            : 'Dette er et eksempel på prosjektkort med en beskrivende hook som viser hvordan innholdet ser ut.'}
                        href={lang === 'es' ? '/sistema-de-diseno' : lang === 'en' ? '/en/design-system' : '/no/designsystem'}
                        slug="example-1"
                        dataIndex={1}
                        lang={lang}
                    />

                    <ProjectCard
                        name={lang === 'es' ? 'Otra Tarjeta' : lang === 'en' ? 'Another Card' : 'Et Annet Kort'}
                        hook={lang === 'es'
                            ? 'Tarjeta de ejemplo con descripción más corta para mostrar la variación.'
                            : lang === 'en'
                            ? 'Example card with shorter description to show variation.'
                            : 'Eksempelkort med kortere beskrivelse for å vise variasjon.'}
                        href={lang === 'es' ? '/sistema-de-diseno' : lang === 'en' ? '/en/design-system' : '/no/designsystem'}
                        slug="example-2"
                        dataIndex={2}
                        lang={lang}
                    />

                    <ProjectCard
                        name={lang === 'es' ? 'Tercer Ejemplo' : lang === 'en' ? 'Third Example' : 'Tredje Eksempel'}
                        hook={lang === 'es'
                            ? 'La tercera tarjeta muestra cómo se alinean múltiples cards en una grilla responsive.'
                            : lang === 'en'
                            ? 'The third card shows how multiple cards align in a responsive grid.'
                            : 'Det tredje kortet viser hvordan flere kort justeres i et responsivt rutenett.'}
                        href={lang === 'es' ? '/sistema-de-diseno' : lang === 'en' ? '/en/design-system' : '/no/designsystem'}
                        slug="example-3"
                        dataIndex={3}
                        lang={lang}
                    />
                </div>
            </div>
        </section>

        <!-- Color System -->
        <section id="colores" class="space-y-6">
            <h2 class="font-mono text-2xl md:text-3xl font-bold">
                {lang === 'es' ? 'Sistema de Color' : lang === 'en' ? 'Color System' : 'Fargesystem'}
            </h2>

            <div class="space-y-4 bg-main/10 p-6">
                <p class="font-mono text-sm">
                    {lang === 'es'
                        ? 'Sistema de dos colores (cambia con el tema)'
                        : lang === 'en'
                        ? 'Two-color system (changes with theme)'
                        : 'To-fargesystem (endres med tema)'}
                </p>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="bg-main/5 p-4 space-y-2">
                        <div class="w-full h-24 bg-main"></div>
                        <p class="font-mono text-sm">--color-main</p>
                        <p class="text-xs text-main/60">
                            {lang === 'es'
                                ? 'Texto, bordes, elementos primarios'
                                : lang === 'en'
                                ? 'Text, borders, primary elements'
                                : 'Tekst, kanter, primære elementer'}
                        </p>
                    </div>
                    <div class="bg-main/5 p-4 space-y-2">
                        <div class="w-full h-24 bg-secondary"></div>
                        <p class="font-mono text-sm">--color-secondary</p>
                        <p class="text-xs text-main/60">
                            {lang === 'es'
                                ? 'Fondos, texto alternativo'
                                : lang === 'en'
                                ? 'Backgrounds, alternate text'
                                : 'Bakgrunner, alternativ tekst'}
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Borders & Spacing -->
        <section id="bordes" class="space-y-6">
            <h2 class="font-mono text-2xl md:text-3xl font-bold">
                {lang === 'es' ? 'Bordes y Espaciado' : lang === 'en' ? 'Borders & Spacing' : 'Kanter og Avstand'}
            </h2>

            <div class="space-y-6 bg-main/10 p-6">
                <div class="space-y-4">
                    <div class="border-2 border-main p-4 bg-main/5">
                        <p class="font-mono text-sm mb-2">border-2 border-main</p>
                        <p class="text-xs text-main/60">
                            {lang === 'es' ? 'Borde estándar (2px sólido)' : lang === 'en' ? 'Standard border (2px solid)' : 'Standard kant (2px solid)'}
                        </p>
                    </div>

                    <div class="border-double border-2 border-main p-4 bg-main/5">
                        <p class="font-mono text-sm mb-2">border-double border-2</p>
                        <p class="text-xs text-main/60">
                            {lang === 'es' ? 'Borde doble para botones' : lang === 'en' ? 'Double border for buttons' : 'Dobbel kant for knapper'}
                        </p>
                    </div>

                    <div class="border-4 border-main p-4 bg-main/5">
                        <p class="font-mono text-sm mb-2">border-4 border-main</p>
                        <p class="text-xs text-main/60">
                            {lang === 'es' ? 'Borde grueso para énfasis' : lang === 'en' ? 'Thick border for emphasis' : 'Tykk kant for vekt'}
                        </p>
                    </div>
                </div>

                <div class="space-y-3">
                    <p class="font-mono text-sm">
                        {lang === 'es' ? 'Escala de Espaciado (grid 8px)' : lang === 'en' ? 'Spacing Scale (8px grid)' : 'Avstandsskala (8px rutenett)'}
                    </p>
                    <div class="space-y-2">
                        <div class="flex items-center gap-4">
                            <div class="bg-main h-2 w-8"></div>
                            <p class="text-xs font-mono">px-2 (8px)</p>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="bg-main h-2 w-16"></div>
                            <p class="text-xs font-mono">px-4 (16px)</p>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="bg-main h-2 w-24"></div>
                            <p class="text-xs font-mono">px-6 (24px)</p>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="bg-main h-2 w-32"></div>
                            <p class="text-xs font-mono">px-8 (32px)</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </ContentPage>
</Layout>
