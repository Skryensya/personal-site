---
export interface Props { 
  title: string; 
  id: string;
  class?: string;
  style?: string;
}

const {
  title,
  id, 
  class: className,
  style,
} = Astro.props;
---

<section
  id={id}
  style={style}
>
  <div class="border-b border-double mb-1">
    <h2 class="text-lg">
      <span class="font-normal">//</span> {title}
    </h2>
  </div>

  <div >
    <slot />
  </div>
</section>
 