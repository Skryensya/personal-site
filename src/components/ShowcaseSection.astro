---
import BigSectionContainer from './BigSectionContainer.astro';
import Button from './Button.astro';
import Tag from './Tag.astro';
import IsometricTextCard from './IsometricTextCard.astro';
import CornersWithCrosses from './CornersWithCrosses.astro';

interface ComponentDemo {
    name: string;
    description: string;
    category: 'ui' | 'interactive' | 'visual';
}

const componentDemos: ComponentDemo[] = [
    { name: "Buttons", description: "Botones con efectos hover y sonido", category: "ui" },
    { name: "Tags", description: "Tags con esquinas decorativas", category: "ui" },
    { name: "Isometric Cards", description: "Tarjetas con perspectiva 3D", category: "visual" },
    { name: "Corner Crosses", description: "Cruces decorativas en esquinas", category: "visual" },
    { name: "Theme System", description: "16 temas dinámicos", category: "interactive" }
];
---

<BigSectionContainer title="Showcase">
    <div class="space-y-8">
        <p class="text-main/70">
            Una colección de componentes custom y efectos visuales construidos para este sitio. 
            Todo con Astro, TypeScript y Tailwind CSS.
        </p>

        <!-- Buttons Demo -->
        <div class="space-y-3">
            <h3 class="text-lg font-semibold text-main">Buttons</h3>
            <p class="text-sm text-main/60 mb-4">Diferentes tamaños y estilos, algunos con efectos 3D y sonido</p>
            <div class="flex flex-wrap gap-4 items-center">
                <Button size="sm">Small Button</Button>
                <Button size="md">Medium Button</Button>
                <Button size="lg">Large Button</Button>
                <Button size="md" filled>Filled</Button>
                <Button size="md" filled elevated>Elevated</Button>
            </div>
        </div>

        <!-- Tags Demo -->
        <div class="space-y-3">
            <h3 class="text-lg font-semibold text-main">Tags</h3>
            <p class="text-sm text-main/60 mb-4">Tags con esquinas decorativas y hover effects</p>
            <div class="flex flex-wrap gap-3">
                <Tag text="React" />
                <Tag text="TypeScript" />
                <Tag text="Astro" />
                <Tag text="Tailwind CSS" />
            </div>
        </div>

        <!-- Isometric Cards Demo -->
        <div class="space-y-3">
            <h3 class="text-lg font-semibold text-main">Isometric Cards</h3>
            <p class="text-sm text-main/60 mb-4">Tarjetas con perspectiva 3D y efectos de profundidad</p>
            <div class="flex flex-wrap gap-6 justify-center md:justify-start">
                <IsometricTextCard text="01" size="sm" />
                <IsometricTextCard text="02" size="md" />
                <IsometricTextCard text="03" size="lg" />
            </div>
        </div>

        <!-- Corner Crosses Demo -->
        <div class="space-y-3">
            <h3 class="text-lg font-semibold text-main">Corner Crosses</h3>
            <p class="text-sm text-main/60 mb-4">Cruces decorativas que se adaptan al tema actual</p>
            <div class="flex gap-6">
                <CornersWithCrosses class="border border-dashed border-main/30 p-4 w-24 h-24 flex items-center justify-center">
                    <span class="text-xs text-main/50">Box 1</span>
                </CornersWithCrosses>
                <CornersWithCrosses class="border border-main/40 p-6 w-32 h-24 flex items-center justify-center bg-main/5">
                    <span class="text-sm text-main/70">Box 2</span>
                </CornersWithCrosses>
            </div>
        </div>

        <!-- Component Categories -->
        <div class="space-y-3">
            <h3 class="text-lg font-semibold text-main">All Components</h3>
            <div class="grid gap-3">
                {componentDemos.map((demo) => (
                    <div class="flex items-center justify-between p-3 border border-main/20 hover:border-main/40 transition-colors">
                        <div>
                            <span class="font-medium text-main">{demo.name}</span>
                            <span class="text-sm text-main/60 ml-2">• {demo.description}</span>
                        </div>
                        <span class="text-xs font-mono px-2 py-1 bg-main/10 text-main rounded-sm border border-main/20">
                            {demo.category}
                        </span>
                    </div>
                ))}
            </div>
        </div>

        <div class="pt-4">
            <Button href="https://github.com/allisonpena/personal-site" size="md">
                Ver código en GitHub →
            </Button>
        </div>
    </div>
</BigSectionContainer>