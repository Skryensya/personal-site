---
import { getTranslationValue, getTranslations } from '@/i18n/utils';
import { defaultLang, type Language } from '@/i18n/ui';
import Button from '../Button.astro';
import { MapPin, CheckCircle, ExternalLink } from 'lucide-react';

interface Props {
  className?: string;
  lang?: Language;
}

const { className = '', lang = defaultLang } = Astro.props;
const t = getTranslations(lang);
---

<section id="about" aria-labelledby="about-heading" class={`relative ${className}`} style="view-transition-name: about-section;">
  <h2 id="about-heading" class="h2">{t('about.title')}</h2>

  <div class="grid items-start gap-4 lg:grid-cols-[1fr_minmax(12rem,16rem)]">
    <!-- Content -->
    <div class=" ">
      <!-- TL;DR Block -->
      <section class="border-2 border-main bg-main p-4 w-full !max-w-[850ch]">
        <h3 class="text-body-mono !my-0 text-secondary">
          TL;DR
        </h3>
        <p class="text-2xl leading-[1.25] text-secondary font-semibold text-balance ">
          {t('about.tldr')}
        </p>
      </section>
 

      <!-- Expanded content -->
      <div class="space-y-4 mt-10 text-main !max-w-[850ch]">
        {(() => {
          const expandedRaw = getTranslationValue(lang, 'about.expanded');
          const paragraphs: string[] = Array.isArray(expandedRaw)
            ? [...expandedRaw]
            : [String(expandedRaw)];
          return paragraphs.map((paragraph: string) => (
            <p class="text-lg leading-relaxed font-normal">
              {paragraph}
            </p>
          ));
        })()}
      </div>

      <!-- Contact CTA -->
      <section class="pt-6 mt-6 border-t border-dashed border-main/20">
        <div class=" leading-relaxed text-main !flex items-center gap-4 w-full">
          <span>  Si algo de esto resuena contigo, </span>
          <span>
            <Button variant="outline" elevated >
              {t('about.cta.button')}
            </Button>
          </span>
        </div>
      </section>
    </div>

    <!-- Photo and Contact Info -->
    <div class="space-y-6">
      <figure class="relative aspect-square w-48 lg:w-full overflow-hidden ring-1 ring-main/20 bg-secondary/10 group" style="view-transition-name: photo-block;">
        <img
          src="/img/me.png"
          alt={t('cv.photo.alt.pixelated')}
          class="absolute inset-0 size-full object-cover transition-opacity duration-300 ease-out group-hover:opacity-0"
          loading="lazy"
          decoding="async"
        />
        <img
          src="/img/true_me.png"
          alt={t('cv.photo.alt.original')}
          class="absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-300 ease-out group-hover:opacity-100"
          loading="lazy"
          decoding="async"
        />
      </figure>

      <!-- Contact Info -->
      <div class="space-y-4">
        <!-- Basic Info -->
        <div class="space-y-3">
          <div class="flex items-start gap-3 text-sm">
            <MapPin size={16} className="text-main mt-0.5 flex-shrink-0" client:idle />
            <div class="flex-1">
              <div class="font-mono text-xs text-main/70 uppercase tracking-wide">Ubicaci√≥n</div>
              <div class="font-medium text-main">Santiago, Chile</div>
            </div>
          </div>
          <div class="flex items-start gap-3 text-sm">
            <CheckCircle size={16} className="text-main mt-0.5 flex-shrink-0" client:idle />
            <div class="flex-1">
              <div class="font-mono text-xs text-main/70 uppercase tracking-wide">Estado</div>
              <div class="font-medium text-main">Disponible para proyectos</div>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="border-t border-main/20 pt-4">
          <div class="font-mono text-sm font-bold text-main uppercase mb-4">Conectar</div>
          <nav class="space-y-1">
            <a
              href="mailto:allison.jpb@gmail.com"
              target="_blank"
              rel="noopener noreferrer"
              class="group font-mono text-sm text-main hover:bg-main hover:text-secondary px-4 py-2.5 md:py-1.5 border-l-2 border-main flex items-center justify-between"
            >
              <span>Email</span>
              <ExternalLink size={14} className="text-main group-hover:text-secondary" client:idle />
            </a>
            <a
              href="https://github.com/Skryensya"
              target="_blank"
              rel="noopener noreferrer"
              class="group font-mono text-sm text-main hover:bg-main hover:text-secondary px-4 py-2.5 md:py-1.5 border-l-2 border-main flex items-center justify-between"
            >
              <span>GitHub</span>
              <ExternalLink size={14} className="text-main group-hover:text-secondary" client:idle />
            </a>
            <a
              href="https://linkedin.com/in/skryensya"
              target="_blank"
              rel="noopener noreferrer"
              class="group font-mono text-sm text-main hover:bg-main hover:text-secondary px-4 py-2.5 md:py-1.5 border-l-2 border-main flex items-center justify-between"
            >
              <span>LinkedIn</span>
              <ExternalLink size={14} className="text-main group-hover:text-secondary" client:idle />
            </a>
            <a
              href="https://lichess.org/@/Skryensya"
              target="_blank"
              rel="noopener noreferrer"
              class="group font-mono text-sm text-main hover:bg-main hover:text-secondary px-4 py-2.5 md:py-1.5 border-l-2 border-main flex items-center justify-between"
            >
              <span>Lichess</span>
              <ExternalLink size={14} className="text-main group-hover:text-secondary" client:idle />
            </a>
          </nav>
        </div>
      </div>
    </div>
  </div>

</section>
