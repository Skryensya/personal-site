---
import Button from './Button.astro';

interface Props {
    title?: string;
    buttonText?: string;
    buttonHref?: string;
    showProjects?: boolean;
}

const { 
    title = "Algunos proyectos",
    buttonText = "Ver todos →",
    buttonHref = "/projects",
    showProjects = false 
} = Astro.props;
---

<section class="py-20 border-main/20">
    <h2 class="text-2xl font-semibold text-main mb-6">{title}</h2>
    
    {showProjects && (
        <div class="grid gap-6 mb-8">
            <!-- Aquí iría la lista de proyectos destacados cuando se implementen -->
            <p class="text-main/60 italic">Proyectos destacados aparecerán aquí...</p>
        </div>
    )}

    <div class="mt-6">
        <Button href={buttonHref} size="sm">
            {buttonText}
        </Button>
    </div>
</section>