---
import Layout from '@/layouts/Layout.astro';
import ContentPage from '@/components/ContentPage.astro';
import AccessibilityStatement from '@/components/pages/AccessibilityStatement.astro';
import { getTranslations } from '@/i18n/utils';
import { defaultLang, type Language } from '@/i18n/ui';

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props as Props;
const t = getTranslations(lang);
---

<Layout
  title={t('accessibility.title')}
  description={t('accessibility.description')}
  lang={lang}
>
  <ContentPage contentId="main-content" lang={lang}>
    <AccessibilityStatement lang={lang} />
  </ContentPage>
</Layout>
