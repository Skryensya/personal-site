---
import Layout from '@/layouts/Layout.astro';
import ContentPage from '@/components/ContentPage.astro';
import AccessibilityStatement from '@/components/AccessibilityStatement.astro';
import TableOfContents from '@/components/TableOfContents.astro';
import { getTranslations } from '@/i18n/utils';
import { defaultLang, type Language } from '@/i18n/ui';

interface Props {
  lang?: Language;
}

const { lang = 'no' } = Astro.props;
const t = getTranslations(lang);
---

<Layout
  title={t('accessibility.title')}
  description={t('accessibility.description')}
  lang={lang}
>
  <div class="flex">
    <main id="main-content" class="flex-1 mx-auto min-w-0 w-fit max-w-[850px] px-4 py-8">
      <AccessibilityStatement lang={lang} />
    </main>
    
    <TableOfContents 
      contentId="main-content" 
      lang={lang}
    />
  </div>
</Layout>