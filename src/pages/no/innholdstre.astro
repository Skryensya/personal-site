---
import Layout from '@/layouts/Layout.astro';
import SitemapTree from '@/components/SitemapTree.astro';
import { getTranslations } from '@/i18n/utils';

const lang = 'no';
const t = getTranslations(lang);
---

<Layout
  title="Innholdstre - Allison Peña"
  description="Komplett struktur av Allison Peñas nettsted, full-stack utvikler"
  lang={lang}
>
  <main class="mx-auto max-w-[var(--max-w-size)] px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-mono font-bold text-main border-b-2 border-main pb-4 mb-4">
        Innholdstre
      </h1>
      <p class="text-main font-mono">
        Utforsk den komplette nettstedsstrukturen for å enkelt navigere gjennom alt innholdet.
      </p>
    </div>
    
    <SitemapTree lang={lang} />
    
    <div class="mt-12 space-y-8">
      <div class="space-y-6">
        <h2 class="text-xl font-mono font-bold text-main border-b border-main pb-2">Tilleggsinformasjon</h2>
        <div class="grid gap-2 font-mono text-sm text-main ml-4">
          <div>Totalt hovedsider: 4</div>
          <div>Tilgjengelige prosjekter: 6</div>
          <div>Støttede språk: 3 (Spansk, Engelsk, Norsk)</div>
          <div>Sist oppdatert: {new Date().toLocaleDateString('no-NO')}</div>
          <div>XML Sitemap: <a href="/sitemap.xml" class="text-main underline hover:no-underline">/sitemap.xml</a></div>
        </div>
      </div>
      
      <div class="space-y-6">
        <h2 class="text-xl font-mono font-bold text-main border-b border-main pb-2">Hurtiglenker</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 font-mono text-sm ml-4">
          <div>
            <h3 class="font-bold text-main mb-3">Hovedsider</h3>
            <div class="space-y-1 ml-4">
              <a href="/no/" class="block text-main hover:underline">Hjem</a>
              <a href="/no/prosjekter/" class="block text-main hover:underline">Prosjekter</a>
              <a href="/no/cv/" class="block text-main hover:underline">CV</a>
              <a href="/no/accessibility/" class="block text-main hover:underline">Tilgjengelighet</a>
            </div>
          </div>
          <div>
            <h3 class="font-bold text-main mb-3">Andre språk</h3>
            <div class="space-y-1 ml-4">
              <a href="/arbol-de-contenido/" class="block text-main hover:underline">Spansk Árbol de contenido</a>
              <a href="/en/content-tree/" class="block text-main hover:underline">Engelsk Content Tree</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>