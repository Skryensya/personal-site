---
import Layout from '@/layouts/Layout.astro';
import SitemapTree from '@/components/SitemapTree.astro';
import TableOfContents from '@/components/TableOfContents.astro';
import { getTranslations } from '@/i18n/utils';

const lang = 'en';
const t = getTranslations(lang);
---

<Layout
  title="Content Tree - Allison Peña"
  description="Complete structure of Allison Peña's website, full-stack developer"
  lang={lang}
>
  <div class="flex">
    <main id="main-content" class="flex-1 mx-auto max-w-[var(--max-w-size)] px-4 py-8">
      <div class="mb-8">
        <h1 id="content" class="text-3xl font-mono font-bold text-main border-b-2 border-main pb-4 mb-4">
          Content Tree
        </h1>
        <p class="text-main font-mono">
          Explore the complete website structure to easily navigate through all content.
        </p>
      </div>
      
      <div id="structure" class="mb-8">
        <h2 class="text-xl font-mono font-bold text-main border-b border-main pb-2 mb-4">Website structure</h2>
        <SitemapTree lang={lang} />
      </div>
      
      <div class="mt-12 space-y-8">
        <div class="space-y-6">
          <h2 id="info" class="text-xl font-mono font-bold text-main border-b border-main pb-2">Additional Information</h2>
          <div id="stats" class="grid gap-2 font-mono text-sm text-main ml-4">
            <div>Total main pages: 4</div>
            <div>Available projects: 6</div>
            <div>Supported languages: 3 (Spanish, English, Norwegian)</div>
            <div>Last updated: {new Date().toLocaleDateString('en-US')}</div>
            <div>XML Sitemap: <a href="/sitemap.xml" class="text-main underline hover:no-underline">/sitemap.xml</a></div>
          </div>
        </div>
        
        <div class="space-y-6">
          <h2 id="links" class="text-xl font-mono font-bold text-main border-b border-main pb-2">Quick Links</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 font-mono text-sm ml-4">
            <div>
              <h3 id="main" class="font-bold text-main mb-3">Main Pages</h3>
              <div class="space-y-1 ml-4">
                <a href="/en/" class="block text-main hover:underline">Home</a>
                <a href="/en/projects/" class="block text-main hover:underline">Projects</a>
                <a href="/en/resume/" class="block text-main hover:underline">Resume</a>
                <a href="/en/accessibility/" class="block text-main hover:underline">Accessibility</a>
              </div>
            </div>
            <div>
              <h3 id="languages" class="font-bold text-main mb-3">Other Languages</h3>
              <div class="space-y-1 ml-4">
                <a href="/arbol-de-contenido/" class="block text-main hover:underline">Spanish Árbol de contenido</a>
                <a href="/no/innholdstre/" class="block text-main hover:underline">Norwegian Innholdstre</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    
    <TableOfContents 
      contentId="main-content" 
      lang={lang}
    />
  </div>
</Layout>