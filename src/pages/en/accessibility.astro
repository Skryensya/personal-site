---
import Layout from '@/layouts/Layout.astro';
import AccessibilityStatement from '@/components/pages/AccessibilityStatement.astro';
import TocClerkAuto from '@/components/TocClerkAuto';
import { getTranslations } from '@/i18n/utils';

const lang = 'en';
const t = getTranslations(lang);
---

<Layout
  title={t('accessibility.title')}
  description={t('accessibility.description')}
  lang={lang}
>
  <div class="flex">
    <main id="main-content" class="flex-1 mx-auto min-w-0 w-fit max-w-[850px] px-4 py-8">
      <AccessibilityStatement lang={lang} />
    </main>
    
    <aside class="sticky top-24 hidden lg:block w-64 h-fit px-4 py-8">
      <TocClerkAuto contentId="main-content" client:load />
    </aside>
  </div>
</Layout>