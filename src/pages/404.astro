---
import Layout from '../layouts/Layout.astro';
import siteConfig from '../data/site-config';
import Button from '../components/Button.astro';
import { getTranslations } from '../i18n/utils';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
---

<Layout title={t('404.title')} description={t('404.description')} image={siteConfig.image} showGameOfLife={true} lang={lang}>
    
    <div class="relative z-10 flex flex-col items-center justify-start min-h-[0dvh] px-4 max-w-2xl mx-auto">
        <!-- Accessible Title -->
        <h1 class="sr-only">{t('404.title')}</h1>
        
        <!-- ASCII Art 404 - Hidden from screen readers -->
        <div class="font-mono text-main text-center my-8 " aria-hidden="true">
            <pre class="text-xs sm:text-sm md:text-lg lg:text-xl xl:text-2xl leading-tight whitespace-pre select-none">
{` █████ █████      █████    █████ █████   
░░███ ░░███     ███░░░███ ░░███ ░░███    
 ░███  ░███ █  ███   ░░███ ░███  ░███ █  
 ░███████████ ░███    ░███ ░███████████  
 ░░░░░░░███░█ ░███    ░███ ░░░░░░░███░█  
       ░███░  ░░███   ███        ░███░   
       █████   ░░░█████░         █████   
   ░░░░░      ░░░░░░         ░░░░░`}</pre>
        </div>

        <!-- Main Content -->
        <div class="mb-16">
            <div class="bg-secondary border-2 border-main p-6">
                <h2 class="text-left font-bold text-main text-2xl md:text-3xl mb-4">{t('404.heading')}</h2>
                <p class="text-left text-main  md:text-lg mb-6 leading-relaxed">
                    {t('404.description')}
                </p>
                
                <!-- Navigation Button inside the card -->
                <div class="flex justify-end">
                    <Button
                        href={lang === 'es' ? '/' : `/${lang}/`}
                        size="normal"
                        elevated
                    >
                        {t('404.home')}
                    </Button>
                </div>
            </div>
        </div>
    </div>

</Layout>
